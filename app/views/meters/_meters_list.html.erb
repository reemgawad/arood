<div class="meter-container mt-5">
  <% if params[:query].present? && meters.empty? %>
    <%= "No matches found" %>
  <% else %>
    <% meters.each do |meter| %>
      <div class="pattern-container">
        <h2><%= meter.name %></h2>
        <p><%= meter.mnemonic %></p>
      </div>
    <% end %>
  <% end %>
</div>
