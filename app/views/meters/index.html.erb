<div class="container">
  <h1 class="text-center mt-3">3arood</h1>

  <div class="search-bar mt-5">
    <%= form_with url: meters_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Type your line.."
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>

  <div class="text-center mt-5">
    <% @meters.each do |meter| %>
      <div class="pattern-container">
        <h2><%= meter.name %></h2>
        <p><%= meter.mnemonic %></p>
      </div>
    <% end %>
  </div>
</div>
